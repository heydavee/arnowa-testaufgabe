<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Entity Definition -->
        <service id="ArnowaProductComplianceInfo\Core\Content\ProductComplianceInfo\ProductComplianceInfoDefinition">
            <tag name="shopware.entity.definition" entity="arnowa_product_compliance_info"/>
        </service>

        <!-- Product Extension -->
        <service id="ArnowaProductComplianceInfo\Extension\ProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <!-- Subscriber -->
        <service id="ArnowaProductComplianceInfo\Subscriber\Storefront\ProductPageLoadedSubscriber" class="ArnowaProductComplianceInfo\Subscriber\Storefront\ProductPageLoadedSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
        
    </services>
</container>